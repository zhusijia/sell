border-1px($color)
	position relative
	&:after
		content ' '
		display block
		position absolute
		width 100%
		left 0px
		bottom 0px
		border-top 1px solid $color

border-top-1px($color)
	position relative
	&:before
		content ' '
		display block
		position absolute
		width 100%
		left 0px
		top 0px
		border-top 1px solid $color

border-none()
	&:after
		display none
		
bg-img($url)
	background-image url($url+"@2x.png")
	@media (-webkit-min-device-pixel-ratio: 3),  (min-device-pixel-ratio: 3)
		background-image url($url+"@3x.png")